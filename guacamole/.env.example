GUACAMOLE_TAG=latest     # Default: ${GUACAMOLE_TAG:-latest}
GUACAMOLE_PORT=8080      # Default: ${GUACAMOLE_PORT:-8080}:8080

# User/Group configuration
USERS_GID=100            # Get with: awk -F\: '/users/ {print $3}' /etc/group

